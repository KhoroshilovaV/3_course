class Player {
    private String name;
    private int id;

    public Player(String name, int id) {
        this.name = name;
        this.id = id;
    }

    public String getName() {
        return this.name;
    }

    public int getId() {
        return this.id;
    }

    public void performAction(String action) {
        System.out.println(this.name + " выполняет действие: " + action);
    }
}
